@page
@model WebAppy1.Pages.Categories.IndexModel
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Category List</h2>
        </div>
        <div class="col-6">
          <a asp-page="create" class="btn btn-primary">Create Category</a>
    </div>
      </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>Order</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.Categories)
            {
            <td width="60%">@obj.name</td>
            <td width="30%">@obj.displayorder</td>
            }
        </tbody>
    </table>
</div>
